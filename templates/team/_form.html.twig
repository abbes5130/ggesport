        <td>{{ form_errors(form.teamName) }}</td>
    </tr>
	 <tr >
        <td >{{ form_label(form.logo) }}</td>
        <td>{{ form_widget(form.logo) }}</td>
        <td>{{ form_errors(form.logo) }}</td>
    </tr>
	 <tr >
        <td >{{ form_label(form.playersNumber) }}</td>
        <td>{{ form_widget(form.playersNumber) }}</td>
        <td>{{ form_errors(form.playersNumber) }}</td>
