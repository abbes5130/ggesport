{% extends 'base.html.twig' %}

{% block title %}Newcategorie index{% endblock %}

{% block body %}
    <h1>Newcategorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newcategorie in newcategories %}
            <tr>
                <td>{{ newcategorie.id }}</td>
                <td>{{ newcategorie.name }}</td>
                <td>
                    <a href="{{ path('app_new_categorie_show', {'id': newcategorie.id}) }}">show</a>
                    <a href="{{ path('app_new_categorie_edit', {'id': newcategorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_new_categorie_new') }}">Create new</a>
{% endblock %}
