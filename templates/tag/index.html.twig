{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag index</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tag %}
            <tr>
                <td>{{ tag.text }}</td>
                <td>
                    <a href="{{ path('tags_show', {'id': tag.id}) }}">show</a>
                    <a href="{{ path('tags_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tag_new') }}">Create new</a>
{% endblock %}
