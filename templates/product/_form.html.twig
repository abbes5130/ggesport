{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Back/dist/css/GG.css') }}">
{% endblock %}



{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
{{ form_widget(form) }}
{{form_errors(form)}}

<div class="fileRow">
	<div class="wrapper">
        <div class="imageContainer" id="display_image">
        {% if product.image %}
            <img src="{{ asset('Uploads/' ~ product.getImage()) }}">
        {% else %}
			<span class="img_icon">
				<svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-card-image" viewbox="0 0 16 16">
					<path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
					<path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54A.505.505 0 0 1 1 12.5v-9a.5.5 0 0 1 .5-.5h13z"/>
				</svg>
			</span>
        {% endif %}
		</div>
		<div id="addImageBtn" class="addImgBtn" onclick="addImageFn()">
			add image
		</div>
	</div>
</div>

<br/>
<button class="btn btn-GG">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}



<script>
	function addImageFn() {
        const image_input = document.querySelector("#product_image");
        image_input.click();
        var img_icon=document.querySelector(".img_icon");
        var uploaded_image = "";
        image_input.addEventListener("change", function(){
            const reader = new FileReader ();
            reader.addEventListener("load", () => {
                uploaded_image = reader.result;
                img_icon.style.display="none";
                document.querySelector("#display_image").style.backgroundImage = `url(${uploaded_image})`;
            });
            reader.readAsDataURL (this.files[0]);
        });

    }

</script>
